---
import { Icon } from 'astro-icon/components';

const { title, description, location, date, barColor, typeIcon } = Astro.props;
---


<div class={`border-l-6 ${barColor} relative`}>
    <span class="rounded-full h-[25px] w-[25px] top-[0px] left-[-16px] bg-chetwode-blue-500 absolute"></span>
    <div class="ms-4 pb-2">
        <h3 class="font-bold text-xl mb-3 dark:text-gray-200">{title}</h3>
        <p class="text-gray-500 mb-1.5 text-lg flex items-center gap-2 dark:text-gray-400"><Icon name={typeIcon} class="text-xl w-8"  />{description}</p>
        <p class="text-gray-500 mb-1.5 text-lg flex items-center gap-2 dark:text-gray-400"><Icon name="fa:map-marker" class="text-xl w-8" />{location}</p>
        <p class="text-gray-500 mb-1.5 text-lg flex items-center gap-2 dark:text-gray-400"><Icon name="fa:calendar" class="text-xl w-8" />{date}</p>
    </div>
</div>